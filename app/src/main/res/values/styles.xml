<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="GeneralTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loadingIndicatorText" parent="GeneralTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SummaryUnSelectedTab" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_five</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryUnSelectedTabSubtitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SummarySelectedTab" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_five</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SummarySelectedTabSubtitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="CardStyle" parent="@android:style/Widget">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListItemTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_four</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="ListItemSubTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StoryTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_three</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StoryProgress" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StoryCount" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_four</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="StoryCountHeader" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ListItemConsumption" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="ListLink" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
